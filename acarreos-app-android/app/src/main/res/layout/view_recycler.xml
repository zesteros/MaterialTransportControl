<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/primary_dark"
        card_view:cardCornerRadius="13dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_marginLeft="18dp">


                <TextView
                    android:id="@+id/subtitle_content_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle1: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/data_content_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data1"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:gravity="start" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="15dp">


                <TextView
                    android:id="@+id/subtitle_content_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtitle2: "
                    android:textAlignment="viewStart"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/data_content_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data2"
                    android:layout_marginLeft="15dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:gravity="start" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>